    <ImageView
        android:id="@+id/imageView"
        android:layout_width="238dp"
        android:layout_height="163dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="37dp"
